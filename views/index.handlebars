<div class="container text-center">
  <h1>Fat Burger</h1>
  <div class="row">
    <div class="col-sm">
      <h3>Future Burgers</h3>
      {{!-- populates all burgers with a button --}}
      <div>
        {{#each burgers}}
        <div>
          <form class="eatenForm">
            <h5>Burger: {{this.burger}} <button type="submit" class="btn btn-danger eat_me" data-id="{{this.id}}">Eat
                Me!</button></h5>
          </form>
        </div>
        {{/each}}
      </div>
    </div>
    {{!-- adds new burgers --}}
    <div class="col-sm">
      <h3>What's on your burger wish list?</h3>
      <form action="/api/burgers" method="POST">
        <textarea type="text" name="burger"></textarea>

        <button type="submit">Submit</button>
      </form>
    </div>
    <div class="col-sm">
      <h3>Burgers Eaten</h3>
      <div id="eatenSide">
        <div>
          {{#each burgers}}
          <div>
            <h5>Burger: {{this.burger}}</h5>

          </div>
          {{/each}}
        </div>
      </div>

    </div>
  </div>
</div>
</div>





<div>

